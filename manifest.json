{
    "manifest_version": 3,
    "name": "YouTube Speed Control",
    "version": "1.0",
    "description": "Speed up YouTube videos up to 10x",
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_icon": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
      },
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"], 
        "js": ["content.js"]
      }
    ]
  }
  